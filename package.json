{
    "name": "napcat-plugin-steam-depot",
    "plugin": "Steam Depot",
    "version": "1.0.0",
    "type": "module",
    "main": "index.mjs",
    "description": "从 GitHub 仓库和 ManifestHub 数据源获取 Steam 游戏的 Manifest 和 Depot 解密密钥，自动生成 Lua 脚本并打包发送到 QQ 群",
    "author": "AQiaoYo",
    "license": "MIT",
    "keywords": [
        "napcat",
        "plugin",
        "qq",
        "steam",
        "depot",
        "manifest"
    ],
    "napcat": {
        "tags": [
            "工具"
        ],
        "minVersion": "4.14.0",
        "homepage": "https://github.com/AQiaoYo/napcat-plugin-steam-depot"
    },
    "dependencies": {
        "napcat-types": "0.0.16"
    },
    "devDependencies": {
        "@rollup/plugin-node-resolve": "^15.0.0",
        "@types/express": "^5.0.6",
        "@types/node": "^20.0.0",
        "typescript": "^5.0.0",
        "vite": "^6.0.0"
    },
    "scripts": {
        "build": "vite build && pnpm run build:webui && pnpm run copy",
        "build:webui": "cd src/webui && pnpm install && pnpm run build",
        "copy": "node scripts/copy-assets.js",
        "dev:webui": "cd src/webui && pnpm run dev",
        "watch": "vite build --watch",
        "typecheck": "tsc --noEmit"
    }
}