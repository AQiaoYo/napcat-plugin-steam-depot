{
    "name": "napcat-plugin-steam-depot",
    "version": "1.0.0",
    "type": "module",
    "main": "index.mjs",
    "description": "NapCat Steam Depot 下载器 - 从 GitHub 获取 Steam 游戏 Manifest 和解密密钥",
    "author": "AQiaoYo",
    "license": "MIT",
    "keywords": [
        "napcat",
        "plugin",
        "qq",
        "steam",
        "depot",
        "manifest"
    ],
    "dependencies": {
        "napcat-types": "0.0.16"
    },
    "devDependencies": {
        "@rollup/plugin-node-resolve": "^15.0.0",
        "@types/express": "^5.0.6",
        "@types/node": "^20.0.0",
        "typescript": "^5.0.0",
        "vite": "^6.0.0"
    },
    "scripts": {
        "build": "vite build && pnpm run build:webui && pnpm run copy",
        "build:webui": "cd src/webui && pnpm install && pnpm run build",
        "copy": "node scripts/copy-assets.js",
        "dev:webui": "cd src/webui && pnpm run dev",
        "watch": "vite build --watch",
        "typecheck": "tsc --noEmit"
    }
}